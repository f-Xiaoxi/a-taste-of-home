<div class="main-title">
  <h2 class="text-center">Reset your password</h2>
  <h6 class="login-text">Enter the email associated with your account to receive a reset link.</h6>
</div>


<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= f.error_notification %>
  <div class="form-inputs text-input-label form-floating">
    <%= f.input :email,
                required: true,
                autofocus: true,
                label: false,
                placeholder: "Email",
                input_html: { autocomplete: "email", class: "border-0 rounded-0 label-style" } %>
    <div class="form-actions">
      <%= f.button :submit, "Submit", class: "login-btn" %>
    </div>
  </div>
<% end %>

<div class="text-input-label devise-links">
  <%= render "devise/shared/links" %>
</div>
