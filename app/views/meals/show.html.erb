<%= link_to "Back to Home", meals_path, class: "btn btnshow mt-3 ms-5 d-flex align-items-center justify-content-center" %>

<div class="container">
  <div class="meal-show-container">
    <%# <div class="row">
      <h2 class="meal-show-title mb-3"><%= @meal.name %>
    <%# </h2></div> %>
    <div class="d-flex justify-content-center mx-auto">
      <%= cl_image_tag @meal.photo.key, class: "meal-image" %>
      <%# <img class="meal-image" src="https://minimalistbaker.com/wp-content/uploads/2022/09/STUNNING-Potato-Gratin-with-Vegan-Cream-Sauce-8-ingredients-tender-potatoes-perfect-for-the-holidays-minimalistbaker-recipe-plantbased-potato-gratin-8-600x900.jpg" alt="food"> %>
      <div class="meal-info flex-column align-items-center p-3">
        <h6 class="font-weight-light"><%= "#{@meal.user.first_name} #{@meal.user.last_name}" %></h6>
        <h2 class="meal-show-title mb-3"><%= @meal.name %></h2>
        <br>
        <h5 class="font-weight-bold">Description:</h5>
        <p class="text-left"><%= @meal.description %></p>
        <br>
        <p class="meal_price">$<%= sprintf('%.2f', @meal.price) %></p>
        <br>
        <%= simple_form_for [@meal, @order] do |f| %>
          <% if @meal.user != current_user %>
            <% f.submit 'Order', class: "btn btnshow fs-5" %>
            <%# <%= link_to "Add a restaurant", new_restaurant_path, class: "btn btn-primary" %>
            <%# redirect_to orders_path, notice: "Order submitted" %>
          <% else %>
            <% "You are the seller" %>
            <%# <%= f.submit 'Order', class: "btn btnshow fs-5", data: { disable_with: false } %>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>


 <hr>

  <h3>Your Products</h3>

    <div class="scrolling-wrapper">
      <% @meal.user.meals.each do |meal|  %>
        <div class="card">
          <%= cl_image_tag meal.photo.key, class: "meal-image-slider" %>
        </div>
      <% end %>
    </div>
</div>
