<div class="main-title">
  <h2 class="text-center"><%= @meal.name %></h2>
</div>

<%# cards %>
<section class="card-container-show wrap ">
  <div class="card border-0 ">
    <div class="image">
      <div class="card-category" style="height: 400px; background-position: center; background-repeat: no-repeat; background-size: cover; background-image: url('<%= cl_image_path @meal.photo.key, height: 400, width: 400, crop: :fill %>')">
    </div>

    <div class="card-body-show">
      <h5 class="card-title">
      <div class = "product-price">
        <p>Price: <span><%= @meal.price %></span></p>
      </div>

      <div class = "product-detail">
        <h2>About this meal: </h2>
          <p><%= @meal.description %></p>
      </div>

      <div class = "purchase-info">
         <%= simple_form_for [@meal, @order] do |f| %>
            <%= f.submit 'Order this meal', class: "btn btn-submit" %></i>
          <% end %>
      </div>
    </div>
  </div>
</section>
